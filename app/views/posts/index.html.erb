

<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">タイトル</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= post.content %></td>
        <td>
          <%= link_to "詳細", post %>
<%= link_to("オススメの薬",new_post_path, {class: "btn-gradient-3d-simple"}) %>

          <%= link_to "削除", post, data: { turbo_method: :delete, turbo_confirm: "削除してよろしいですか？" } %>
          <%= render "like", post: post, is_liked: post.likes.any? { |like| like.user_id == current_user.id } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


